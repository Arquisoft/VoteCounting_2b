<?xml version='1.0' encoding='UTF-8'?>
<faces-config xmlns="http://java.sun.com/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_2_2.xsd"
		version="2.2">

	<application>
		<el-resolver>
    		    org.springframework.web.jsf.el.SpringBeanFacesELResolver
		</el-resolver>
  	</application>
  	
  	<navigation-rule>
	<from-view-id>principal.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{busqueda.buscar}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/chart.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
    </navigation-rule>	
    <navigation-rule>
	<from-view-id>listaElecciones.xhtml</from-view-id>
		<navigation-case>
			<from-action>#{BeanRecuento.recuentoVotos(eleccion)}</from-action>
			<from-outcome>exito</from-outcome>
			<to-view-id>/chart.xhtml</to-view-id>
			<redirect/>
		</navigation-case>
    </navigation-rule>	

</faces-config>